<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE lockss-config SYSTEM "src//org//lockss//config//lockss-config.dtd">

<lockss-config>
  <property name="org.lockss">

    <!-- Title Sets -->
    <property name="titleSet">
      <property name="alltitles">
	<property name="class" value="alltitles" />
      </property>
      <property name="activeaus">
	<property name="class" value="activeaus" />
      </property>
      <property name="inactiveaus">
	<property name="class" value="inactiveaus" />
      </property>
      <property name="attrtitleset">
	<property name="name" value="Cool or Red Titles " />
	<property name="class" value="xpath" />
	<property name="xpath" value="[attributes/color='red' or attributes/temp='cool']" />
      </property>
      <property name="iop">
	<property name="name" value="All IOP Titles" />
	<property name="class" value="xpath" />
	<property name="xpath" value="[pluginName='org.lockss.plugin.iop.IOPPlugin']" />
      </property>
      <property name="sage">
        <property name="name" value="All SAGE Titles" />
        <property name="class" value="xpath" />
	<property name="xpath" value="[attributes/publisher='sage' or attributes/publisher='SAGE Publications']" />
      </property>

      <property name="oup">
        <property name="name" value="All Oxford University Press Titles" />
        <property name="class" value="xpath" />
	<property name="xpath" value="[attributes/publisher='Oxford University Press']" />
      </property>

      <property name="blackwell">
        <property name="name" value="All Blackwell Publications Titles" />
        <property name="class" value="xpath" />
	<property name="xpath" value="[attributes/publisher='Blackwell Publishing']" />
      </property>

      <property name="acs">
        <property name="name" value="All American Chemical Society Titles" />
        <property name="class" value="xpath" />
	<property name="xpath" value="[attributes/publisher='American Chemical Society']" />
      </property>

      <property name="highwire">
	<property name="name" value="All HighWire Titles" />
	<property name="class" value="xpath" />
	<property name="xpath" value="[pluginName='org.lockss.plugin.highwire.ClockssHighWirePlugin']" />
      </property>

      <property name="nature">
        <property name="name" value="All Nature Titles" />
        <property name="class" value="xpath" />
	<property name="xpath" value="[attributes/publisher='Nature']" />
      </property>

      <property name="elsevier">
        <property name="name" value="All Elsevier Titles" />
        <property name="class" value="xpath" />
        <property name="xpath" value="[pluginName='org.lockss.plugin.elsevier.ClockssElsevierPlugin']" />
      </property>

      <property name="springer">
        <property name="name" value="All Springer Titles" />
        <property name="class" value="xpath" />
        <property name="xpath" value="[pluginName='org.lockss.plugin.springer.ClockssSpringerPlugin']" />
      </property>

      <property name="wiley">
        <property name="name" value="All Wiley Titles" />
        <property name="class" value="xpath" />
        <property name="xpath" value="[pluginName='org.lockss.plugin.wiley.ClockssWileyPlugin']" />
      </property>

    </property>
  </property>
</lockss-config>

